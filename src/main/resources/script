-- Create "profile" table
CREATE TABLE profile (
    id SERIAL PRIMARY KEY,
    name VARCHAR,
    description VARCHAR
);

-- Create "user" table
CREATE TABLE "user" (
    id SERIAL PRIMARY KEY,
    name VARCHAR,
    email VARCHAR,
    password VARCHAR,
    birthday TIMESTAMP,
    phone NUMERIC,
    profile_id INT REFERENCES profile(id)
);

